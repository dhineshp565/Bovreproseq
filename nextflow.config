// Global default params, used in configs


params {

    // Options: Mandatory
    input='filepath'
    outdir='output_directory'			
	reference='reference.fasta'
	primerbed='primer.bed'
	trim_barcodes=null
	centri_db=null
	kraken_db=null
}


profiles {
    conda {
        includeConfig 'config/conda.config'
		conda.enabled=true
    }
	docker {
		includeConfig 'config/docker.config'
		docker.enabled=true
	}
}


process {
	withLabel:low {
		cpus= 2
	 	memory= 4.GB
	 	time= 2.h
	 }
	 withLabel:medium {
	 	cpus=4
	 	memory= 8.GB
		time= 4.h
	 }
	 withLabel:high {
	 	cpus=8
	 	memory=16.GB
	 	time= 8.h
	 }
}
