manifest {
	homePage = 'https://github.com/dhineshp565/Bovreproseq'
    description = 'Pipeline for genarating results from targeted amplicon sequencing'
	author= 'dhineshp565'
    mainScript = 'main.nf'
    version = '1.0.0'
	nextflowVersion= '>=22.12.0-edge'
	manifest.defaultBranch = "main"
	name = 'Bovreproseq'
}

params {

    input='filepath'
    outdir='output_directory'			
	reference='Bovreproseq_reference.fasta'
	primerbed='Bovreproseq_primer.bed'
	trim_barcodes=null
	centri_db=null
	kraken_db=null
}


profiles {
    
	standard{
		docker {
			includeConfig 'config/docker.config'
			docker.enabled=true
		}
	}
	conda {
        includeConfig 'config/conda.config'
		conda.enabled=true
	}
}


process {
	withLabel:low {
		cpus= 2
	 	memory= 3.GB
	 	time= 2.h
	 }
	 withLabel:medium {
	 	cpus=4
	 	memory= 4.GB
		time= 4.h
	 }
	 withLabel:high {
	 	cpus=8
	 	memory=8.GB
	 	time= 8.h
	 }
}

timeline {
  enabled = true
  overwrite = true
  file = "${params.outdir}/execution/timeline.html"
}
report {
  enabled = true
  overwrite = true
  file = "${params.outdir}/execution/report.html"
}
trace {
  enabled = true
  overwrite = true
  file = "${params.outdir}/execution/trace.txt"
}
