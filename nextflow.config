manifest {
	homePage = 'https://github.com/dhineshp565/Bovreproseq'
    	description = 'Pipeline for genarating results from targeted amplicon sequencing'
	author= 'dhineshp565'
    	mainScript = 'main.nf'
    	version = '1.0.0'
	nextflowVersion= '>=22.12.0-edge'
}

params {

    	input='filepath'
    	outdir='output_directory'			
	reference='reference.fasta'
	primerbed='primer.bed'
	trim_barcodes=null
	centri_db=null
	kraken_db=null
}


profiles {
    	conda {
        	includeConfig 'config/conda.config'
		conda.enabled=true
	}
	docker {
		includeConfig 'config/docker.config'
		docker.enabled=true
	}
}


process {
	withLabel:low {
		cpus= 2
	 	memory= 3.GB
	 	time= 2.h
	 }
	 withLabel:medium {
	 	cpus=2
	 	memory= 4.GB
		time= 4.h
	 }
	 withLabel:high {
	 	cpus=2
	 	memory=6.GB
	 	time= 8.h
	 }
}
